<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Windbreaker"
    android:layout_margin="20dp">
    <TextView
        android:id="@+id/WindBreaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WindBreaker"
        android:layout_centerHorizontal="true"
        android:textSize="36dp"
        android:fontFamily="@font/pacificoregular"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/WindBreaker"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/TextVinny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vinny"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:fontFamily="@font/concertoneregular"
            android:textColor="@color/red"
            />
    </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/vinny"
            android:layout_below="@id/RelativeLayout1"
            />

</RelativeLayout>