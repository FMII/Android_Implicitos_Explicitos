<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/exp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:typeface="monospace"
        />

    <Button
        android:contentDescription="1"
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:text="Primero"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/pink"
        />
    <Button
        android:contentDescription="2"
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:text="Segundo"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/lesspink"

        />
    <Button
        android:contentDescription="3"
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2"
        android:text="Tercero"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/pink"

        />


    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:layout_below="@+id/btn3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/imp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:typeface="monospace"
        />

    <Button
        android:contentDescription="4"
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:text="Primero"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/pink"
        />

    <Button
        android:contentDescription="5"
        android:id="@+id/btn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn4"
        android:text="Segundo"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/lesspink"

        />
    <Button
        android:contentDescription="6"
        android:id="@+id/btn6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn5"
        android:text="Tercero"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/pink"
        />




</RelativeLayout>